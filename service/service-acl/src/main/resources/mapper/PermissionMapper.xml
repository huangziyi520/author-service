<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.canteencenter.dao.PermissionDao">

    <resultMap id="PermissionMap"
               type="com.canteencenter.security.entity.Permission">
        <id column="id" property="id"/>
        <id column="pid" property="pid"/>
        <id column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="permission_value" property="permissionValue"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="gmt_create" property="gmtCreate"/>
    </resultMap>
    <sql id="allColumns">
        id,pid,name,type,permission_value,path,component,icon,status,is_deleted,gmt_create,gmt_modified
    </sql>
    <sql id="setColumns">
        <if test="id != null">
            id=#{id},
        </if>
        <if test="pid != null">
            pid=#{pid},
        </if>
        <if test="name != null">
            name=#{name},
        </if>
        <if test="type != null">
            type=#{type},
        </if>
        <if test="permissionValue != null">
            permission_value=#{permissionValue},
        </if>
        <if test="path != null">
            path=#{path},
        </if>
        <if test="component != null">
            component=#{component},
        </if>
        <if test="icon != null">
            icon=#{icon},
        </if>
        <if test="status != null">
            status=#{status},
        </if>
        <if test="isDeleted != null">
            is_deleted=#{isDeleted},
        </if>
        <choose>
            <when test="gmtModified != null">
                gmt_modified = ${gmtModified},
            </when>
            <otherwise>
                gmt_modified = now(),
            </otherwise>
        </choose>
        <if test="gmtCreate != null">
            gmt_create=#{gmtCreate}
        </if>
    </sql>

    <select id="selectPermissionById" resultMap="PermissionMap">
        select
        <include refid="allColumns"/>
        from acl_permission
        where id=#{id};
    </select>

    <insert id="createPermission" parameterType="com.canteencenter.security.entity.Permission">
        insert into acl_permission
        <set>
            <include refid="setColumns"/>
        </set>
    </insert>

    <update id="updatePermission" parameterType="com.canteencenter.security.entity.Permission">
        update acl_permission
        <set>
            <include refid="setColumns"/>
        </set>
        where id=#{id}
    </update>
</mapper>