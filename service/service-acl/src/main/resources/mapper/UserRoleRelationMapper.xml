<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.canteencenter.dao.UserRoleRelationDao">

    <resultMap id="UserRoleRelationMap"
               type="com.canteencenter.security.entity.UserRoleRelation">
        <id column="id" property="id"/>
        <id column="role_id" property="roleId"/>
        <result column="user_id" property="userId"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="gmt_create" property="gmtCreate"/>
    </resultMap>
    <sql id="allColumns">
        id,role_id,user_id,is_deleted,gmt_modified,gmt_create
    </sql>
    <sql id="setColumns">
        <if test="id != null">
            id=#{id},
        </if>
        <if test="roleId != null">
            role_id=#{roleId},
        </if>
        <if test="userId != null">
            user_id=#{userId},
        </if>
        <if test="isDeleted != null">
            is_deleted=#{isDeleted},
        </if>
        <choose>
            <when test="gmtModified != null">
                gmt_modified = ${gmtModified},
            </when>
            <otherwise>
                gmt_modified = now(),
            </otherwise>
        </choose>
        <if test="gmtCreate != null">
            gmt_create=#{gmtCreate}
        </if>
    </sql>

    <select id="selectUserRoleRelationById" resultMap="UserRoleRelationMap">
        select
        <include refid="allColumns"/>
        from acl_user_role
        where id=#{id};
    </select>

    <select id="selectUserRoleRelationByUserId" resultMap="UserRoleRelationMap">
        select
        <include refid="allColumns"/>
        from acl_user_role
        where user_id=#{userId};
    </select>


    <select id="selectUserRoleRelationByRoleId" resultMap="UserRoleRelationMap">
        select
        <include refid="allColumns"/>
        from acl_user_role
        where role_id=#{roleId};
    </select>

    <insert id="createUserRoleRelation" parameterType="com.canteencenter.security.entity.UserRoleRelation">
        insert into acl_user_role
        <set>
            <include refid="setColumns"/>
        </set>
    </insert>

    <update id="updateUserRoleRelation" parameterType="com.canteencenter.security.entity.UserRoleRelation">
        update acl_user_role
        <set>
            <include refid="setColumns"/>
        </set>
        where id=#{id}
    </update>
</mapper>